/**
 * Implements hook_ctools_plugin_directory().
 */
function contactfield_ctools_plugin_directory($module, $plugin) {
  if ($module == 'contactfield') {
    return 'plugins/' . $plugin;
  }
}

/**
 * Implements hook_ctools_plugin_type().
 */
function contactfield_ctools_plugin_type() {
  $plugins['format'] = array(
    'load themes' => TRUE,
  );
  return $plugins;
}

/**
 * Implements hook_views_api().
 */
function contactfield_views_api() {
  return array(
    'api' => 3,
    'path' => drupal_get_path('module', 'contactfield') . '/views',
  );
}

/**
 * Get the list of format plugins.
 */
function contactfield_format_plugins() {
  ctools_include('plugins');
  $plugins = ctools_get_plugins('contactfield', 'format');
  uasort($plugins, 'ctools_plugin_sort');

  return $plugins;
}

/**
 * Get the list of format plugins in a format suitable for #options.
 */
function contactfield_format_plugins_options() {
  $options = array();
  foreach (contactfield_format_plugins() as $widget => $info) {
    $options[$widget] = check_plain($info['title']);
  }
  return $options;
}

/**
 * @defgroup contactfield_format contact format API
 * @{
 * API for generating contact forms and display formats.
 *
 * contactes forms and display formats are collaboratively generated by one or
 * more format handler plugins. An contact with a name and a company, for example,
 * will be generated by three handlers:
 *   - 'contact' that will generate the country, locality, street blocks
 *   - 'organisation' that will add the organisation block to the contact
 *   - 'name-full' that will add a first name and last name block to the contact
 *
 * A format handler is a CTools plugin of type 'contactfield' / 'format'. Each
 * handler is passed the format in turn, and can add to or modify the format.
 *
 * The format itself is a renderable array stub. This stub will be transformed
 * into either a Form API array suitable for use as part of a form or into a
 * renderable array suitable for use with drupal_render(). The following
 * modifications are done:
 *   - when rendering as a form, every element which name (its key in the array)
 *     is a valid contactfield column (see contactfield_field_schema()), will
 *     be transformed into a form element, either using a type explicitly
 *     defined in '#widget_type' or using 'select' if '#options' is set or
 *     'textfield' if it is not. In addition, the '#default_value' of every
 *     field will be populated from the contact being edited.
 *   - when rendering as a formatter, every element which name (its key in the array)
 *     is a valid contactfield column (see contactfield_field_schema()), will
 *     be transformed into a renderable element, either using a type explicitly
 *     defined in '#render_type' or else using 'contactfield_container'. When
 *     the type is 'contactfield_container' the element will be rendered as
 *     an HTML element set by '#tag' (default: span).
 */

/**
 * Generate a format for a given contact.
 *
 * @param $contact
 *   The contact format being generated.
 * @param $handlers
 *   The format handlers to use to generate the format.
 * @param $context
 *   An array of context arguments:
 *     - 'mode': can be either 'form' or 'render'
 *     - (optional) 'field': when generated for a field, the field
 *     - (optional) 'instance': when generated for a field, the field instance
 *     - (optional) 'langcode': when generated for a field, the langcode
 *       this field is being rendered in.
 *     - (optional) 'delta': when generated for a field, the delta of the
 *       currently handled contact.
 *
 * @return
 *   A rendered array suitable for use as part of a form (if 'mode' is 'form'),
 *   or suitable to pass to drupal_render().
 */
function contactfield_generate($contact, array $handlers, array $context = array()) {
  ctools_include('plugins');
  $format = array();
  $format['#handlers'] = $handlers;
  foreach ($format['#handlers'] as $handler) {
    if ($callback = ctools_plugin_load_function('contactfield', 'format', $handler, 'format callback')) {
      $callback($format, $contact, $context);
    }
  }

  // Store the contact in the format, for processing.
  $format['#contact'] = $contact;

  // Post-process the format stub, depending on the rendering mode.
  if ($context['mode'] == 'form') {
    $format['#contactfield'] = TRUE;
    $format['#process'][] = 'contactfield_process_format_form';
    $format['#required'] = FALSE;
  }
  else {
    $format['#pre_render'][] = 'contactfield_render_contact';
  }

  return $format;
}

/**
 * Generate a full-fledged form from a format snippet, as returned by contactfield_formats().
 */
function contactfield_process_format_form($format, &$form_state, $complete_form) {
  // Make sure to load all the plugins that participated in this format.
  ctools_include('plugins');
  foreach ($format['#handlers'] as $handler) {
    ctools_plugin_load_function('contactfield', 'format', $handler, 'format callback');
  }

  _contactfield_process_format_form($format, $format['#contact'], $format['#required']);
  return $format;
}

function _contactfield_process_format_form(&$format, $contact, $required) {
  foreach (element_children($format) as $key) {
    $child = &$format[$key];

    // Automatically expand elements that matches one of the field of the
    // contact structure.
    if (in_array($key, array('name_line', 'first_name', 'last_name', 'organisation_name', 'country', 'administrative_area', 'sub_administrative_area', 'locality', 'dependent_locality', 'postal_code', 'thoroughfare', 'premise', 'sub_premise', 'phone_number', 'phone_extension', 'mobile_number', 'fax_number', 'email'))) {
      // Set the type.
      if (isset($child['#widget_type'])) {
        $child['#type'] = $child['#widget_type'];
      }
      else {
        if (isset($child['#options'])) {
          $child['#type'] = 'select';
          $child['#size'] = 0;
        }
        else {
          $child['#type'] = 'textfield';
        }
      }
      if (!$required) {
        unset($child['#required']);
      }

      $child['#default_value'] = $contact[$key];
    }

    // Recurse through the child.
    _contactfield_process_format_form($child, $contact, $required);
  }
}

/**
 * Render an contact in a given format.
 */
function contactfield_render_contact($format) {
  _contactfield_render_contact($format, $format['#contact']);
  return $format;
}

function _contactfield_render_contact(&$format, $contact) {
  foreach (element_children($format) as $key) {
    $child = &$format[$key];

    // Automatically expand elements that matches one of the field of the
    // contact structure.
    if (in_array($key, array('name_line', 'first_name', 'last_name', 'organisation_name', 'country', 'administrative_area', 'sub_administrative_area', 'locality', 'dependent_locality', 'postal_code', 'thoroughfare', 'premise', 'sub_premise', 'phone_number', 'phone_extension', 'mobile_number', 'fax_number', 'email'))) {
      if (isset($child['#render_type'])) {
        $child['#type'] = $child['#render_type'];
      }
      else {
        $child['#type'] = 'contactfield_container';
        if (!isset($child['#tag'])) {
          $child['#tag'] = 'span';
        }
      }

      if (isset($child['#options'])) {
        // Expand options if necessary.
        $child['#children'] = isset($child['#options'][$contact[$key]]) ? check_plain($child['#options'][$contact[$key]]) : '';
      }
      else {
        $child['#children'] = check_plain($contact[$key]);
      }

      // Skip empty elements.
      if ((string) $child['#children'] === '') {
        $child['#access'] = FALSE;
      }

      // Add #prefix and #field_suffix to the prefixes and suffixes.
      if (isset($child['#prefix'])) {
        $child['#prefix'] = (isset($child['#prefix']) ? $child['#prefix'] : '') . $child['#prefix'];
      }
      if (isset($child['#field_suffix'])) {
        $child['#suffix'] = (isset($child['#suffix']) ? $child['#suffix'] : '') . $child['#field_suffix'];
      }
    }

    // Recurse through the child.
    _contactfield_render_contact($child, $contact);
  }
}

